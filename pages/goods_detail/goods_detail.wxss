.swiper {
    text-align: center;
    width: 100%;
    height: 500rpx;
    /* border: 1px solid red; */
} 
.swiper swiper{
     width: 100%; 
     height: 100%; 
}

.goods-name{
    padding: 20rpx;
    font-size: 30rpx;
}

.price-cart{
    display: flex;
    justify-content:flex-start;
    padding-left: 20rpx; 
    color: #ee5353;
}
.member-price{
    font-size:26rpx;
    color:#baa589;
    padding-top:10rpx;
    margin-left: 45rpx;
}
.stock{
    display: flex;
    justify-content:flex-start;
    padding-left: 20rpx; 
    font-size: 28rpx;
    color: #bbb;
}
.stock .selling{
    margin-left: 65rpx;
}
.number{
    width: 100%;
    height: 50rpx;
    padding: 20rpx;
    font-size: 40rpx;
    line-height: 50rpx;
    color: #777;
    /* border: 1px solid red;  */
}
.jian,.num,.jia{
    width: 50rpx;
    height: 50rpx;
    border: 2rpx solid #ccc;
    text-align: center;
    line-height: 50rpx; 
     font-size: 50rpx; 
    float: left; 
}
.jian{
    margin-left:30rpx; 
}
.num{
    width: 80rpx;
    border-left:0;
    border-right:0;
    font-size: 30rpx;
}

.address{
    height: 30rpx;
    padding: 20rpx;
    font-size:30rpx;
    color: #444;
      /* border: 1px solid red;   */
}
.address view{
    float:right;
    color:#aaa;
}
.msg{
    margin-left: 110rpx;
    font-size: 25rpx;
    color: #aaa;
    margin-bottom: 25rpx;
     /* border: 1px solid red;   */
}
.comment{
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    font-size: 30rpx;
    color:#666;
}
.short-comment,.long-comment{
    margin:10rpx 20rpx;
    font-size: 25rpx;
    color:#666;
}
.comment-img{
    display: flex;
    justify-content:space-around;
    margin-bottom:20rpx; 
}
.comment-img image{
    width:160rpx; 
    height: 160rpx; 
}
.bottom-btn{
    position: fixed;
    top: 91.7%;
    left:0;
    display: flex;
    flex-direction:row;
    background-color: #fff;
}
.custom-service{
    width: 185rpx; 
    height: 100rpx;
    padding-top:10rpx; 
    text-align: center;
    /* line-height: 100rpx; */
    font-size: 25rpx;
    color: #666;
    box-sizing: border-box;
    /* border: 1px solid red; */
}
.custom-service image{
    width:45rpx;
    height:45rpx;
}
.ziti{
    line-height: 80rpx;
    font-size: 35rpx;
    color: #fff;
    background-color: #ffb97a;
}
.immediate-sale{
    line-height: 80rpx;
    font-size: 35rpx;
    color: #fff;
    background-color: #ce000d;
}
.guess {
    margin-left: 20rpx;
    font-size: 30rpx;
    color: #666;
}
.youlike{
    margin-left: 20rpx;
}
.youlike image{
    width: 200rpx;
    height:200rpx;
}
.youlike view{
    font-size: 25rpx;
    color: #aaa;
}
.youlike-each{
    width: 230rpx;
    height: 300rpx;
    float: left;
    text-align: center; 
}
.specification-parameter,.goods-info{
    margin-top: 20rpx;
    margin-left: 20rpx;
    font-size: 30rpx;
    color: #666;
}
.specification-parameter-info view{
    margin-left: 50rpx;
    margin-bottom:5rpx;
    font-size:23rpx;
    color:#bbb;
}
.goods-info{
    margin-bottom:20rpx;
}