page{
    background-color: #f0f0f0;
}
.nav{
    display: flex;
    justify-content: space-around;
     padding:0 20rpx; 
     box-sizing: border-box; 
    width: 100%;
    height: 88rpx;
    background-color: #fff;
}
.nav-each{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 178rpx;
    height: 88rpx;
}
.nav-each text{
    margin-right: 10rpx;
}
.nav-each image{
    width: 25rpx;
    height: 30rpx;
}
.goods-list{
    width: 100%;
    height: 1115rpx;
}
.goods-list-all{
    float: left;
    margin:20rpx 0 0 20rpx; 
}
.goods-list-each{
    width:342rpx;
     height: 395rpx; 
    padding: 20rpx;
    box-sizing: border-box;
    background-color: #fff;
}
.goods-img{
    width: 304rpx;
    height: 240rpx;
    border:1rpx solid red;
}
.goods-name{
    margin-top:10rpx; 
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 26rpx;
    color: #333;
}
.goods-price{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20rpx;
    font-size: 30rpx;
    color: #ec2525;
}
.icon-cart{
    width: 30rpx;
    height: 30rpx;
}