<!--pages/goods_cate/goods_cate.wxml-->
<view class=''>
    <!-- 搜索栏start  -->
    <view class="search">
        <view class="form">
            <input class="input"  placeholder="输入商品名称" bindinput="bindKeywordInput" confirm-type="search" bindconfirm="bindKeywordConfirm"/>
            <image class="btn" src="/images/icon_search.png" bindtap="bindSearchTap"></image>
        </view>
    </view>
    <!-- 搜索栏end  -->

    <!--分类联动start  -->
    <view class='containers'> 
        <view class="nav_left">
            <block wx:for="{{goodsGroup}}">
                <view class="nav_left_items {{item.id==current_id ? '.active' : ''}}" bindtap="goods_group" data-index="{{item.id}}" data-id="{{item.id}}">
                    {{item.name}}
                </view>
            </block>
            
        </view>
        <view class="nav_right">
            <view class="nav_right_adv">
                <image src="../../images/nav_right_adv.png" style='width:100%;height:160rpx'></image>
            </view>
            <!-- <view wx:if="{{navRightItems[curIndex].tree.nodes[1].tree.nodes}}"> -->
            <view>
                <block wx:for="{{goodsClass}}">
                    <view class="nav_right_items">
                        <navigator url="">
                            <view style='background:url({{item.class_img}}) no-repeat 0rpx 0rpx;'>        
                                {{item.name}}
                            </view>
                        </navigator>
                    </view>
                </block>
               
            </view>
            <!-- <view wx:else> -->
                <!-- 暂无数据 -->
        </view>
    </view>    
    <!--分类联动end  -->
</view>
