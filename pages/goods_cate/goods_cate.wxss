/* catalog.wxss */
page{
  background: #f4f4f4;
}

.search{
  width: 100%;
  height: 150rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search .form{
  height: 60rpx;
  width: 690rpx;
  background: #f4f4f4;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search .input{
  height: 40rpx;
  width: 600rpx;
}

.search .btn{
  height: 40rpx;
  width: 40rpx;
}

.containers {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #fff;
  color: #939393;
}
.nav_left{
  display: inline-block;
  width: 25%;
  height: 100%;
  background: #e5e5e5;
  text-align: center;
}
.nav_left .nav_left_items{
  height: 60rpx;
  line-height: 60rpx;
  padding: 12rpx 0;
  border-bottom: 1px solid #dedede;
  font-size: 14px;
}
.nav_left .nav_left_items.active{
  background: #f5f5f5;
  color: #9c0207;
}
.nav_right{
  position: absolute;
  top: 0;
  right: 0;
  flex: 1;
  width: 75%;
  height: 100%;
  padding: 20rpx;
    background: #f5f5f5; 
  box-sizing: border-box;
}
.nav_right .nav_right_adv{
    width: 100%;
    height: 200rpx;
}
.nav_right .nav_right_items{
  float: left;
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  border-radius:50%; 
  margin-bottom:50rpx;  
  margin-right:50rpx;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
   border: 1px solid #aaa;
}
