.header{
    width: 100%;
    height: 450rpx;
    background-color: #000;
    padding-top: 20rpx; 
}
.shehzhi{
    float: right;
    /* margin-right: 20rpx;
    margin-left: 20rpx; */

}
.xiaoxi{
    float: right;
    margin-right: 20rpx;
    margin-left: 40rpx;
}
.profile{
    position: relative;
    margin-left: 20rpx;
    margin-top: 100rpx; 
    width: 100%;
    height: 180rpx;
    /* border-radius: 50%;  */
    /* overflow: hidden;  */
    /* border: 1px solid red;  */
}
.profile image{
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%; 
}
.nickname {
    position: absolute;
    top: 20rpx;
    left: 220rpx;
    font-size: 30rpx;
    color: #eee;
}
.header .ad {
    margin-top: 20rpx;
    text-align: center;
}
.header .ad image{
    width: 90%;
    height: 150rpx;
}
.myorder-font{
    display: flex;
    justify-content:space-between;
    padding: 20rpx;
    box-sizing: border-box;
}
.myorder-font-1{
    font-size: 30rpx;
    color: #666;
}
.myorder-font-2{
    font-size: 25rpx;
    color: #999;
}
.line{
    margin-left: 5%;
    width: 90%;
    height: 4rpx;
    background-color: #ddd;
}
.four-wait{
    display: flex;
    justify-content:space-around;
}
.four-wait-each{
    position: relative;
    text-align: center;
    width: 100rpx;
    height: 100rpx;
    margin-top: 40rpx; 
    /* line-height: 100rpx; */
    /* border: 1px solid red; */
}
.four-wait-each image{
    width: 56rpx; 
    height: 48rpx;
}
.four-wait-each-font{
    font-size: 25rpx;
}
.three-caozuo{
    display: flex;
    justify-content:space-around;
}
.three-caozuo .four-wait-each image{
    width: 70rpx; 
    height: 70rpx;
}
.bottom{
    width: 100%;
    margin-bottom: 10rpx;
    background-color: #eee;
}
.bottom-ad{
    text-align: center;
}
.bottom-ad image{
    margin-top: 20rpx;
    width: 90%;
    height: 200rpx;
}
.membership-privilege{
    margin-top: 20rpx;
     text-align: center; 
}
.membership-privilege-font{
    font-size: 30rpx;
    margin-bottom: 20rpx;
}
.membership-privilege-scroll{
    position: relative;
    width: 200rpx;
    height: 220rpx;
    display: inline-block;
    margin-right: 10rpx; 
    /* border: 1px solid red; */
}
.membership-privilege-scroll image{
    width: 200rpx;
    height: 220rpx;
    z-index: 1;
}
.membership-privilege-scroll view{
    position: absolute;
    top: 180rpx;
    left: 0rpx;
    width: 100%;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    font-size: 25rpx;
    color: #fff;
    background-color: #999;
    opacity: 0.9;
    /* border: 1px solid red; */
    z-index: 9999;
}