/*背景颜色  */
page{
  background: #ddd;
}

/*整体  */
.body{
  height:250rpx;
  margin-top:20rpx;
  background: white; 
}

/*收货人  */
.user{
  width:100%;
  margin-left: 40rpx;
  line-height: 72rpx;
  font-size: 30rpx;
  color: #333333;
}

/*地址  */
.add{
  width:100%;
  margin-left: 25rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  color: #666666;
}

/*边距  */
.bianju{
  height: 5rpx;
  width:100%;
  background: #ddd;
  margin-top: 25rpx;
}

/*编辑  */
.bianji{
    font-size: 30rpx;
    margin-left: 10rpx; 
    line-height: 80rpx;
    float: left;
}

/*选框按钮  */
.check{
  color:red;
  margin-left: 30rpx;
  float: left;
  margin-top: 10rpx;
}
/*删除图标  */
.del{
  width: 30rpx;
  height: 30rpx;
  margin-top: 25rpx;
  margin-left: 20rpx; 
  float: left;
}

/*添加新地址  */
.insert{
  width:700rpx;
  height: 80rpx;
  background: red;
  line-height: 70rpx;
  margin-left: 30rpx;
  margin-top:800rpx; 
  color:white;
  text-align: center;
  border-radius:10rpx; 
}
