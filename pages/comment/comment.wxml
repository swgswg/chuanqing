            <view bindtap='cancleImg' data-src='{{index}}' class="cancle">X</view>
        </view>  -->   
        <image bindtap='addImg' hidden="{{src.length >= 4 ? true : false}}"  src="../../images/addimage.png"></image>  
    </view>
    <button bindtap='publishComment' type='default'>确定</button>
</view>

