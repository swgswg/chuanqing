.container {
  position: relative;
  width: 100%;
  height: 100%;
  z-index: 1;
  /* background-image:  */
  background-color: #f4475a;
  padding: 0px;
}
.seckill-countdown{
    position: absolute;
    top: 0;
    left: 0;
    z-index: 9999;
    width: 100%;
    height: 60rpx;
    font-size: 30rpx;
    color:#fff;
    text-align: center;
    line-height: 60rpx;
    background-color: #000;
    opacity: 0.5;
}
.goods-seckill {
    margin-top: 340rpx;
    padding:0 20rpx;
    box-sizing: border-box;
    width: 100%;
    height: 865rpx;
}
.goods-list{
    display: flex;
    flex-direction: row; 
    flex-wrap: wrap;  
    justify-content: space-around;
    width: 100%;
    /* background-color: red; */
}
.goods-info {
    float: left;
    width: 345rpx;
    height: 430rpx;
    margin-bottom: 20rpx;
    /* margin:0 0 20rpx 20rpx; */
    background-color: #fff;
}
.goods-img{
    margin-top: 16rpx;
    text-align: center;
}
.goods-img image{
    width: 313rpx;
    height: 244rpx;
    border: 1px solid red;
}
.goods-name{
    padding:0 20rpx;
     font-size: 26rpx; 
    color: #333;
    /* overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap; */
}
.price-cart{
    display: flex;
    justify-content:space-between;
    padding: 20rpx;
    align-items: center;
}