<view class="four-btn">
    <view class="clickbtn">全部</view>
    <view>待发货</view>
    <view>待收货</view>
    <view>待评价</view>
</view>
<view>
    <block wx:for="{{myorder}}">
        <view sytle="width:100%;background-color:#fff;">
            <!-- <block wx:if="{{item.order_status == '2'}}"> -->
                <view class="order-time-status">
                    <view class="order-time">{{item.order_time}}</view>
                    <!-- <view class="order-status">{{item.order_status }}</view> -->
                    <view class="order-status" wx:if="{{item.order_status == '1'}}">卖家未发货</view>
                    <view class="order-status" wx:if="{{item.order_status == '2'}}">卖家已发货</view>
                    <view class="order-status" wx:if="{{item.order_status == '3'}}">交易成功</view>
                </view>
                <block wx:for="{{item.order_goods}}" wx:for-item="vv">
                    <view class="myorder_each">
                        <view class="goods-info">
                            <view class="goods-img">
                                <!-- <image src="../../images/comment-img.png"></image> -->
                                <image src="{{vv.goods_img}}"></image>
                            </view>
                            <view class="goods-name">
                                <view>
                                    <!-- 奔富洛神山庄设拉子赤霞珠红葡萄酒750ml进口红酒葡萄酒 -->
                                    {{vv.goods_name}}
                                </view>
                                <view class="guige">
                                    商品规格: {{vv.goods_guige}}
                                </view>
                            </view>
                            <view class="goods-price">
                                <view class="buy-price">¥{{vv.goods_buyprice}}</view>
                                <view class="huaxian-price">¥{{vv.goods_yuanjia}}</view>
                                <view class="buy-number">x{{vv.goods_number}}</view>
                            </view>
                        </view>
                    </view>
                    <view style="height:20rpx;background-color:#fff"></view>
                    <view style="width:100%;border:2rpx solid #eee;"></view>
                    <view style="height:20rpx;background-color:#fff"></view>
                </block>
                <view class="order-summary">共{{item.order_goods.length}}件商品 合计:¥{{item.order_total}}(含运费¥0.00)</view>
                
                <view class="order-btn" wx:if="{{item.order_status == '1'}}">
                    <view class="order-btn2">提醒发货</view>
                </view>
                <view class="order-btn" wx:if="{{item.order_status == '2'}}">
                    <view class="order-btn1">查看物流</view>
                    <view class="order-btn2">确认收货</view>
                </view>
                <view class="order-btn" wx:if="{{item.order_status == '3'}}">
                    <view class="order-btn1">申请售后</view>
                    <view class="order-btn2">评价</view>
                </view>
            <!-- </block> -->
        </view>
    </block>
</view>