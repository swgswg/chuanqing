page{
    background-color: #eee;
}
.each{
    padding:0 20rpx;
    box-sizing: border-box;
    /* background-color: #fff; */
}
.date{
    padding: 20rpx 0;
    box-sizing: border-box;
    font-size:30rpx;
    color:#999;
    text-align: center;
    /* border: 1px solid red; */
}
.content{
    background-color: #fff;
    padding: 20rpx;
    box-sizing: border-box;
}
.title{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    /* border: 1px solid red; */
}
.title-img{
    width: 12rpx;
    height: 12rpx;
    margin-right: 20rpx;
}
.title-name{
    font-size:30rpx;
    color: #666;
}
.news{
    width: 100%;
    display: flex;
    justify-content: flex-start;
    /* align-items: center; */
    padding: 18rpx 10rpx 22rpx 10rpx;
    box-sizing: border-box;
}

.news .news-img{
    width: 200rpx;
    height: 200rpx;
    /* border: 1px solid red; */
}
.news-text{
    margin-left: 40rpx;
    font-size:24rpx;
    color: #999;
}
.detail-btn{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    font-size:24rpx;
    color: #ccc;
    padding: 20rpx;
    box-sizing: border-box;
    border-top: 2rpx solid #ccc;
}
.detail-btn-img{
    margin-left: 10rpx;
    width: 36rpx;
    height:22rpx;
}